{
  "name": "rownan-react",
  "author": "Adam Collier",
  "version": "0.1.8",
  "private": true,
  "homepage": "./",
  "main": "./src/main/electron.js",
  "dependencies": {
    "axios": "^0.21.1",
    "cheerio": "^1.0.0-rc.3",
    "codemirror": "^5.47.0",
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "^8.0.1",
    "react": "^17.0.1",
    "react-beautiful-dnd": "^11.0.4",
    "react-dom": "^17.0.1",
    "react-syntax-highlighter": "^10.3.0",
    "request-promise-native": "^1.0.7",
    "shortid": "^2.2.14",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@vitejs/plugin-react-refresh": "^1.1.3",
    "electron": "^11.2.0",
    "electron-devtools-installer": "^3.1.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-prettier": "^3.2.0",
    "foreman": "^3.0.1",
    "progress-bar-webpack-plugin": "^1.12.1",
    "vite": "^2.0.0-beta.50",
    "webpack-bundle-analyzer": "^3.3.2"
  },
  "scripts": {
    "analyze": "node analyze.js",
    "start": "electron-forge start",
    "react:dev": "vite",
    "react:build": "vite build",
    "react:serve": "vite serve",
    "dev": "nf start",
    "electron": "electron .",
    "electron:dev": "ELECTRON_START_URL=http://localhost:3000/ electron .",
    "package": "electron-forge package",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix 'src/**/*.js'",
    "make": "npm run react:build && electron-forge make"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": "https://github.com/Adam-Collier/rownan-react.git",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icon.icns",
        "prune": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Rownan"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
